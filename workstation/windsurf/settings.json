{
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.wordWrapColumn": 150,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.rulers": [
    {
        "column": 100,
        "color": "#e6e1dc"
    },
    {
        "column": 125,
        "color": "#bc9458"
    },
    {
        "column": 180,
        "color": "#FF1728"
    }
  ],

  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,

  "extensions.ignoreRecommendations": true,
  "extensions.allowed": "*",

  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
      ".sass-cache/": true,
      ".vscode/": true,
      "node_modules/": true
  },

  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  "ruby.lint": {
    "rubocop": true
  },
  "ruby.rubocop.configFilePath": "./.rubocop.yml",
  "ruby.rubocop.useBundler": true,
  "ruby.lsp.useCustomShell": false,
  "ruby.intellisense": "rubyLocate",
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "ruby.useLanguageServer": true,
  "rubyLsp.enabledFeatures": {
    "definition": true,
    "documentHighlights": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "hover": true,
    "semanticHighlighting": true
  },
  "rubyLsp.rubyVersionManager": {
    "type": "auto"
  },

  "sync.gist": "409d087c34a3bb6fdd8fa3dfb3824d84",

  "terminal.integrated.fontSize": 14,

  "window.commandCenter": true,
  "window.zoomLevel": -1,

  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "RailsCasts Plus Theme",
  "workbench.editor.centeredLayoutAutoResize": false,
  "workbench.commandPalette.history": 1000,
  "workbench.editor.closeEmptyGroups": false,

  // -------------------------------------------------------------------
  // https://code.visualstudio.com/api/references/theme-color
  "workbench.colorCustomizations": {
    "editorGutter.background": "#2b2b2b",

    "editorGroupHeader.tabsBackground": "#000000",

    "editorGroup.border": "#FF1728",

    "editor.background": "#000000",

    "tab.activeBorderTop": "#FF1728",

    "terminal.ansiBlack": "#2b2b2b",
    "terminal.ansiBrightBlack": "#5a647e",
    "terminal.ansiRed": "#da4939",
    "terminal.ansiBrightRed": "#cc7833",
    "terminal.ansiGreen": "#a5c261",
    "terminal.ansiBrightGreen": "#FF1728",
    "terminal.ansiYellow": "#ffc66d",
    "terminal.ansiBrightYellow": "#FF1728",
    "terminal.ansiBlue": "#6d9cbe",
    "terminal.ansiBrightBlue": "#d4cfc9",
    "terminal.ansiMagenta": "#b6b3eb",
    "terminal.ansiBrightMagenta": "#f4f1ed",
    "terminal.ansiCyan": "#519f50",
    "terminal.ansiBrightCyan": "#bc9458",
    "terminal.ansiWhite": "#e6e1dc",
    "terminal.ansiBrightWhite": "#f9f7f3",
    "terminal.background": "#000000",

    "window.activeBorder": "#FF1728"
  }
  // -------------------------------------------------------------------
}
