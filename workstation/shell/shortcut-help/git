#!/bin/zsh
githelp () {
  echo
  echo "--------------------------------------------------------------------------------"
  echo "  gc           = commit locally, but do not push to origin"
  echo "  gcb          = pull, create local branch, push it to origin, set upstream"
  echo "  gcbd         = pull, create local branch off of develop, push it to origin, set upstream"
  echo "  gcbfb        = pull, create branch off another branch, push it to origin, set upstream"
  echo "  gcm          = commit locally, but do not push to origin, commit msg in ide"
  echo "  gmb          = pull, merge branch, push, status"
  echo "  gmt          = pull, merge branch with full rewrite, push, status"
  echo "  gpab         = delete all local branches"
  echo "  gdb          = delete local and remote branch"
  echo "  gp           = pull down all the code and all the tags"
  echo "  gpo          = pushing all the things to origin"
  echo "  gck          = checkout, pull, status"
  echo "  gec          = setup empty commit and trigger ci"
  echo "  gct          = set the tag and push it"
  echo "  gtl          = list out all the tags"
  echo "  gdt          = delete tag and push delete"
  echo "  grt          = recreate the tag"
  echo "  grpo         = purge dead branches locally and origin"
  echo "  gcbn         = current branch name"
  echo "  gk           = create git .keep file"
  echo "  gkf          = create folder with .keep file"
  echo "  gcmd         = create readme markdown file and open it"
  echo "  gd           = show current diff"
  echo "  grso         = show all of the current local and remote branches"
  echo "  gcf          = what are my config settings"
  echo "  gs           = status of local files"
  echo "  ggoback      = reset all local changes and purge files and directories"
  echo "  gpurgetags   = purge last 120 tags"
  echo "  gstats       = show git commit statistics"
  echo "  gsmi         = git submodule init recursively"
  echo "  gec          = push empty commit"
  echo "--------------------------------------------------------------------------------"
  echo "  gl           = show log --show-notes"
  echo "  glt          = show log --graph --oneline --all"
  echo "  gltp         = show log --graph --all --decorate"
  echo "--------------------------------------------------------------------------------"
  echo "  gph          = push master to heroku"
  echo "--------------------------------------------------------------------------------"
  echo
}
